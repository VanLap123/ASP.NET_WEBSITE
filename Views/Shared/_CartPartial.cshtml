    if (jsoncart != null) {
        var cart = JsonConvert.DeserializeObject<List<CartItem>> (jsoncart);
        <div class="nav-item"><a asp-route="cart"><img src="https://previews.123rf.com/images/dirkercken/dirkercken1403/dirkercken140301202/26968597-my-cart-button-placing-shopping-order-at-online-webshop-internet-web-shop-icon.jpg" style="width:30px;height:30px" ></a>(@cart.Count)</div>
         
    }
}