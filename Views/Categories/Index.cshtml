@model IEnumerable<WEBGROUP_GCC0903.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Category</h1>

<p>
    <a class="btn btn-dark" asp-action="Create">Add</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Category Name
            </th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.cat_id
            </td>
            <td>
                @item.cat_name
            </td>
            <td>
                <a class="btn btn-dark" asp-action="Edit" asp-route-id="@item.cat_id">Edit</a> 
                <a class="btn btn-dark" asp-action="Delete" asp-route-id="@item.cat_id" onclick="return confirm('Do you want to delete?')">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
